{{!-- /**
 * @name : 라디오
 * @description : 라디오 컴포넌트
 * @property
 *  - check_class : 체크박스 추가 class
 *  - id : 체크박스 ID
 *  - chk_class : 체크박스 class
 *  - name : 체크박스 name
 *  - checked : 체크 여부
 *  - disabled : 비활성화 여부
 *  - role : role 속성 (switch)
 *  - aria-checked : aria-checked 속성 (switch)
 */
 --}}
<div class="inp_check{{#if check_class}} {{check_class}}{{/if}}">
	<input type="radio"
		id="{{id}}"
		{{#if chk_class}}class="{{chk_class}}"{{/if}}
		{{#if name}}name="{{name}}"{{/if}}
		{{#if checked}}checked{{/if}}
		{{#if disabled}}disabled{{/if}}
		{{#if role}}role="{{{role}}}"{{/if}}{{!-- swich --}}
		{{#if aria-checked}}aria-checked="{{{aria-checked}}}"{{/if}}{{!-- swich --}}
	>
	<label for="{{id}}" class="chk_label{{#if label_class}} {{label_class}}{{/if}}{{#if ag_more}} more_add{{/if}}">
		<span class="label_cont">
			{{{labelname}}}
			{{#if labelcont}}<span class="sub_g_txt">{{{labelcont}}}</span>{{/if}}
		</span>
	</label>
	<i></i>
	{{#if @partial-block}}{{> @partial-block }}{{/if}}
	{{#if ag_more}}<button type="button" class="ag_more_btn" aria-label="{{labelname}} 자세히 보기"{{#if pop_open}} onclick="openHDPopup(this,'{{#if pop_id}}{{{pop_id}}}{{/if}}');"{{/if}}>자세히</button>{{/if}}
</div>