{{!-- /**
 * @name : 버튼
 * @description : 버튼 컴포넌트
 * @property
 *  - atag : a태그 여부
 *  - type : 버튼타입[1(primary)-기본, 2(secondary), 3(info), 4(success), 5(warning), 6(error)]
 *  - size : 버튼사이즈[1(CTA&primary)-기본, 2(lg), 3(md), 4(sm), 5(xs)]
 * 	- class : 추가 class
 *  - pop-id : 호출할 팝업 ID
 *  - alt : 알럿메세지
 *  - confirm : 취소, 확인 버튼 안내메세지
 *  - confirm2 : 아니요 예 버튼 안내메세지
 *  - toast-msg : toast 메시지
 *  - b-text : 버튼 표시 텍스트
 *  - noText : 아이콘만 있는 경우
 *  - btn-title : 호버시 툴팁 title
 *  - leftIcon : 왼쪽 아이콘 설정 class
 *  - rightIcon : 오른쪽 아이콘 설정 class
 *  - disabled : 비활성화 여부
 */
 --}}
<{{#if atag}}a href="#"{{else}}button type="button"{{/if}} class="btn{{#if color}} btn_c{{color}}{{/if}}{{#if type}} btn_t{{type}}{{/if}}{{#if size}} btn_s{{size}}{{/if}}{{#if class}} {{class}}{{/if}}"{{#if disabled}} disabled{{/if}}{{#if pop-id}} onclick="layerPopup.open('{{pop-id}}');"{{/if}}{{#if alt}} onclick="layerInfo.alert({{alt}});"{{/if}}{{#if confirm}} onclick="layerInfo.confirm({{confirm}});"{{/if}}{{#if confirm2}} onclick="layerInfo.confirm2({{confirm2}});"{{/if}}{{#if btn-title}} title="{{btn-title}}"{{/if}}{{#if toast-msg}} onclick="showToast('{{toast-msg}}');"{{/if}}>
{{#if leftIcon}}{{/if}}
{{#unless noText}}
	{{#if b-text}}
		<span class="text">{{{b-text}}}</span>
		{{else}}
		<span class="text">{{> @partial-block }}</span>
	{{/if}}
{{/unless}}
{{#if rightIcon}}{{/if}}
{{#if atag}}</a>{{else}}</button>{{/if}}